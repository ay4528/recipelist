      <p class="is-size-1" style="font-family: mv boli;">Recipelist</p>
    </div>
    <br>
    <div class="columns is-centered">
      <div class="column">
        <figure>
          <div class="home-image"></div>
        </figure>
      </div>
    </div>
  <% else %>
    <div class="content has-text-centered">
