<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">レシピ作成</h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%= form_for @recipe do |f| %>
          <div class="field">
            <%= f.label :title, "レシピ名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :material, "材料", class: "label" %>
            <%= f.text_area :material, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :make, "作り方", class: "label" %>
            <%= f.text_area :make, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :point, "ポイント", class: "label" %>
            <%= f.text_area :point, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>
          
          <%= f.submit '投稿', class: "button is-success" %>
          
        <% end %>
      </div>
    </div>
  </div>
</section>